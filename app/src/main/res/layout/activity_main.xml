<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/async_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_async" />

        <Button
            android:id="@+id/differ_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_differ" />

        <Button
            android:id="@+id/serialize_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_serial" />

        <Button
            android:id="@+id/compress_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_compress" />

        <Button
            android:id="@+id/graphql_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_graphql" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>